{
  "eslint.enable": false,
  "jshint.enable": false,
  "tslint.enable": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.DS_Store": true,
    "tmp": true,
    "typings": true,
    "typings.json": true,
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/project.lock.json": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/dist": true,
    "**/*.js": {
      "when": "$(basename).ts"
    }
  }
}
